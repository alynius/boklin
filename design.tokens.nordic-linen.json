{
  "meta": {
    "name": "NordicLinenScheduler",
    "version": "1.0.0",
    "source": "Static HTML mockup",
    "description": "Warm Nordic linen scheduling UI with layered panels, linen/linen textures, and mono metadata.",
    "target": "Next.js + Tailwind"
  },
  "tokens": {
    "colors": {
      "canvas": "#E5E0D8",
      "panelDark": "#2A2A2A",
      "panelLight": "#FCFAF7",
      "panelSlots": "#EFECE6",
      "textDark": "#2A2A2A",
      "textLight": "#FCFAF7",
      "accent": "#4A5D4E",
      "shadow": "rgba(0, 0, 0, 0.15)",
      "shadowSoft": "rgba(0, 0, 0, 0.08)",
      "hoverDay": "#F0EDE8",
      "borderSubtle": "rgba(0,0,0,0.05)",
      "slotBgDefault": "rgba(255,255,255,0.5)",
      "slotBgHover": "#FFFFFF"
    },
    "typography": {
      "fonts": {
        "sans": "Inter, ui-sans-serif, system-ui, -apple-system, BlinkMacSystemFont",
        "mono": "JetBrains Mono, ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas"
      },
      "scale": {
        "brandTitle": {
          "size": "2.5rem",
          "weight": 800,
          "tracking": "-0.04em",
          "lineHeight": 0.9
        },
        "sectionTitle": {
          "size": "1.8rem",
          "weight": 800,
          "tracking": "-0.02em",
          "lineHeight": 1.1
        },
        "subheading": {
          "size": "1.5rem",
          "weight": 300,
          "tracking": "-0.01em",
          "lineHeight": 1.3
        },
        "body": {
          "size": "1rem",
          "weight": 300,
          "lineHeight": 1.4
        },
        "labelMono": {
          "size": "0.75rem",
          "weight": 300,
          "tracking": "0.1em",
          "transform": "uppercase"
        },
        "tinyLabelMono": {
          "size": "0.7rem",
          "weight": 300,
          "tracking": "0.1em",
          "transform": "uppercase"
        },
        "buttonPrimary": {
          "size": "0.9rem",
          "weight": 800,
          "tracking": "0.05em",
          "transform": "uppercase"
        }
      }
    },
    "layout": {
      "appWrapper": {
        "width": "90vw",
        "maxWidth": "1100px",
        "height": "700px"
      },
      "grid": {
        "columns": [1.2, 2, 1],
        "gap": "0"
      },
      "panelPadding": {
        "vertical": "4rem",
        "horizontal": "3rem"
      },
      "radius": {
        "day": "2px",
        "slot": "4px"
      }
    },
    "effects": {
      "dropShadowMain": "0 20px 50px rgba(0,0,0,0.15)",
      "panelCalendarShadow": "-20px 0 40px rgba(0,0,0,0.08)",
      "panelSlotsShadow": "-10px 0 30px rgba(0,0,0,0.08)"
    },
    "motion": {
      "transition": "all 0.4s cubic-bezier(0.23, 1, 0.32, 1)",
      "entry": {
        "name": "slideUp",
        "durationMs": 800,
        "translateY": 30,
        "delayBrandMs": 100,
        "delayCalendarMs": 200,
        "delaySlotsMs": 300
      },
      "slotHover": {
        "scale": 1.05
      },
      "dayHover": {
        "translateY": -2
      },
      "buttonHover": {
        "letterSpacingMultiplier": 4
      }
    },
    "texture": {
      "linenOverlay": {
        "type": "svg-filter",
        "filterId": "linen",
        "mixBlendMode": "multiply",
        "opacity": 0.4
      }
    }
  },
  "utilities": {
    "classes": {
      "linenOverlay": "fixed inset-0 pointer-events-none mix-blend-multiply opacity-40 z-[100]",
      "appWrapper": "relative grid shadow-[0_20px_50px_rgba(0,0,0,0.15)]",
      "labelMono": "font-mono uppercase tracking-[0.1em] text-[0.75rem] opacity-60",
      "tinyLabelMono": "font-mono uppercase tracking-[0.1em] text-[0.7rem] opacity-40",
      "dayBase": "aspect-square flex items-center justify-center font-mono cursor-pointer rounded-[2px] transition-all duration-400",
      "slotBase": "border border-[rgba(0,0,0,0.05)] font-mono text-[0.9rem] text-center cursor-pointer transition-all duration-400",
      "btnPrimaryBase": "w-full border-none font-sans font-extrabold uppercase tracking-[0.05em] cursor-pointer transition-all duration-400"
    }
  },
  "components": {
    "AppShell": {
      "description": "3-panel layered scheduling layout with linen overlay.",
      "structure": [
        "LinenOverlay",
        "AppWrapper",
        "PanelBrand",
        "PanelCalendar",
        "PanelSlots"
      ]
    },
    "LinenOverlay": {
      "role": "Global tactile paper overlay using SVG filter with fractal noise.",
      "props": [],
      "style": {
        "position": "fixed",
        "inset": 0,
        "pointerEvents": "none"
      }
    },
    "PanelBase": {
      "role": "Base panel container with padding, transform, and z-index.",
      "props": ["tone", "zIndex", "transform"],
      "states": {
        "brand": {
          "background": "panelDark",
          "textColor": "textLight",
          "transform": "translateX(10px) rotate(-0.5deg)",
          "zIndex": 1
        },
        "calendar": {
          "background": "panelLight",
          "textColor": "textDark",
          "transform": "scale(1.02)",
          "zIndex": 2
        },
        "slots": {
          "background": "panelSlots",
          "textColor": "textDark",
          "transform": "translateX(-10px) rotate(0.5deg)",
          "zIndex": 3
        }
      }
    },
    "LabelMono": {
      "role": "System/meta label",
      "typography": "labelMono",
      "usage": [
        "Panel descriptors",
        "Time zone labels",
        "Section hints"
      ]
    },
    "CalendarHeader": {
      "role": "Month selector header.",
      "parts": ["label", "title", "navButtons"],
      "layout": "flex justify-between items-end",
      "navButtons": {
        "style": "border-none bg-transparent cursor-pointer opacity-30 for inactive; normal opacity for current"
      }
    },
    "CalendarGrid": {
      "role": "7-column calendar layout.",
      "layout": "grid-cols-7 gap-[1rem]",
      "children": ["weekdayLabels", "dayCells"]
    },
    "DayCell": {
      "role": "Single day in calendar.",
      "states": {
        "empty": {
          "interactive": false,
          "background": "transparent",
          "cursor": "default"
        },
        "default": {
          "background": "transparent",
          "hoverBackground": "hoverDay",
          "hoverTransform": "translateY(-2px)"
        },
        "today": {
          "marker": "small circle at bottom center in accent color"
        },
        "active": {
          "background": "accent",
          "textColor": "textLight",
          "markerColor": "textLight"
        }
      }
    },
    "SlotList": {
      "role": "Vertical scrollable list of time slots.",
      "layout": "flex flex-col gap-[0.75rem] overflow-y-auto"
    },
    "Slot": {
      "role": "Selectable time slot.",
      "typography": "mono",
      "states": {
        "default": {
          "background": "slotBgDefault",
          "borderColor": "borderSubtle",
          "hoverBackground": "slotBgHover",
          "hoverBorderColor": "accent",
          "hoverScale": 1.05
        },
        "selected": {
          "background": "slotBgHover",
          "borderColor": "accent"
        }
      }
    },
    "PrimaryButton": {
      "role": "Primary CTA.",
      "style": {
        "background": "accent",
        "textColor": "textLight",
        "paddingY": "1.5rem",
        "letterSpacing": "0.05em",
        "hoverLetterSpacing": "0.2em",
        "hoverBackground": "#3E4E41"
      }
    }
  },
  "pagePatterns": {
    "Scheduler3Panel": {
      "description": "Main layout for scheduling: identity, calendar, slots.",
      "grid": "grid-cols-[1.2fr_2fr_1fr]",
      "panelsOrder": ["PanelBrand", "PanelCalendar", "PanelSlots"]
    }
  }
}


